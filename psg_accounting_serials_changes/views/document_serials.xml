<odoo>
  <data>
    <!-- actions -->
    <record model="ir.actions.act_window" id="account_document_serials_action">
      <field name="name">Document Serials</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.document_serials</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            list of all document serials
        </p>
      </field>
    </record>

    <!-- Menu -->
    <menuitem action="account_document_serials_action" id="menu_account_document_serials_action" parent="account.menu_account_config" sequence="2"/>

    <!-- Views Form -->
    <record model="ir.ui.view" id="account_document_serials_view_form">
      <field name="name">Document Serials Form</field>
      <field name="model">account.document_serials</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="name"/>
              <field name="source_journal"/>
              <field name="is_related"/>
            </group>
          </group>
        </form>
      </field>
    </record>

    <!-- Views Tree -->
    <record model="ir.ui.view" id="account_document_serials_view_tree">
      <field name="name">Document Serials List</field>
      <field name="model">account.document_serials</field>
      <field name="arch" type="xml">
        <tree>
              <field name="name"/>
              <field name="source_journal"/>
              <field name="is_related"/>
        </tree>
      </field>
    </record>
  </data>
</odoo>