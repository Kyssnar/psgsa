<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_view_form_modify" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit.modify</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
               <xpath expr="//field[@name='journal_id']" position="after">
                   <field name="source_journal" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                   <field name="source_document" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
               </xpath>
        </field>
    </record>
</odoo>
