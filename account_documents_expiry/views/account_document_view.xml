<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.cron" id="employee_data_reminder">
        <field name="name">Account Document Expiration</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_accounting_document"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
    </record>


    <record model='ir.ui.view' id='accounting_document_form_view'>
        <field name="name">accounting.document.form</field>
        <field name="model">accounting.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_ref"/>
                            <field name="document_type"/>
                            <field name="doc_attachment_id" widget="many2many_binary" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="notification_type"/>
                            <field name="before_days" attrs="{'invisible' : [('notification_type', '=', 'single')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='accounting_document_tree_view'>
        <field name="name">accounting.document.tree</field>
        <field name="model">accounting.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="document_type"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>


    <record id="hr_accounting_document_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">accounting.document</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="accounting_document_tree_view"/>
    </record>

    <menuitem id="accounts_document_menuitem"
              name="Documents"
              parent="document_base_menuitem"
              action="account_documents_expiry.hr_accounting_document_action"/>
</odoo>