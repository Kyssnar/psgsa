<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_category_form2" model="ir.ui.view">
             <field name="name">document.type.form</field>
             <field name="model">document.type</field>
             <field name="arch" type="xml">
                 <form string="account Tags">
                     <sheet>
                         <group>
                             <field name="name"/>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>

    <record model='ir.ui.view' id='account_document_tree_view'>
        <field name="name">document.type.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_account_document_type_action" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="document_base_menuitem"
              name="Accounting Document"
              parent="account.menu_finance_configuration"
              sequence="10"

              />

    <menuitem id="document_types_menuitem"
              name="Document Types"
              parent="document_base_menuitem"
              sequence="1"
              action="account_documents_expiry.hr_account_document_type_action"
              />
</odoo>